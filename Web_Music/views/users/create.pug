extends ../layouts/common.pug
block content 
    .container.d-flex
        .row
            h1 Tạo mới tài khoản
            if errors
               each error in errors
                    .alert.alert-danger= error
            form(action="/users/create", method="POST" class="mt-4")
                .form-group.mt-4
                    lable(for='name') Tên đăng nhập 
                    input(type="text", name="name",id="name", class="mb-2 form-control", value=values ? values.name : "")
                .form-group.mt-4
                    lable(for='phone') Email 
                    input(type="text", name="phone",id="phone", class="mb-2 form-control", value=values ? values.phone : "")
                .form-group.mt-4
                    lable(for='age') Mật Khẩu 
                    input(type="text", name="age",id="age", class="mb-2 form-control", value=values ? values.age : "")
                    button.btn.btn-primary(class="mt-4") Tạo mới




