extends ../layouts/common.pug

block content 
  .container
    h1 Danh sách người dùng
    .align-items-center
      a.btn.btn-primary(href="/users/create") New
      form.mt-4(action="/users/search", method="GET", class="d-flex ml-auto")
        input(type="text", name='q',class="form-control user-input")
        button(class="btn btn-primary mt-8 ml-2") Search

    table.table
      tr
        th STT
        th Tên
        th Email
        th Số điện thoại
        th Action
      each user, index in users
        tr
          td=index+1
          td=user.name
          td=user.email
          td=user.phone
          td
            a.btn.btn-danger(href="/users/" +user.id) View
      else 
        li Not found

